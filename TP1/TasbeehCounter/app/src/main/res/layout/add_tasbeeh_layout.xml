<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addTasbeeh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add tasbeeh"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/addTasbeehInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/noOfTimes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="No of times (optional)"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/addTasbeeh">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/noOfTimesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/addtasbeehButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add tasbeeh"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/noOfTimes"/>

</androidx.constraintlayout.widget.ConstraintLayout>